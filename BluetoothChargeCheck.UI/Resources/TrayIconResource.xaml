<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="clr-namespace:H.NotifyIcon;assembly=H.NotifyIcon.Wpf"
                    xmlns:vm="clr-namespace:DCT.TraineeTasks.BluetoothChargeCheck.UI.ViewModels"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors" xmlns:views="clr-namespace:DCT.TraineeTasks.BluetoothChargeCheck.UI.Views"
                    mc:Ignorable="d">
    <ContextMenu x:Shared="False"
                 x:Key="SysTrayMenu"
                 d:DataContext="{d:DesignInstance vm:TrayIconViewModel}">
        <MenuItem Header="Hide" Command="{Binding RemoveIconCommand}" />
        <Separator/>
        <MenuItem Header="Exit">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                    <i:CallMethodAction
                        TargetObject="{Binding Source={x:Static Application.Current}}"
                        MethodName="Shutdown"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </MenuItem>
    </ContextMenu>

    <DataTemplate x:Key="TaskbarIcon">
        <tb:TaskbarIcon
        Visibility="Visible"
        ContextMenu="{StaticResource SysTrayMenu}"
        PopupActivation="LeftClick"
        Id="{Binding Name}"
        d:DataContext="{d:DesignInstance vm:TrayIconViewModel}">

            <tb:TaskbarIcon.IconSource>
                <!-- idk why, but 96 it is xD -->
                <tb:GeneratedIconSource
                                    FontFamily="Segoe Fluent Icons"
                                    FontSize="96"
                                    Size="128"
                                    Text="{Binding Glyph}">
                    <tb:GeneratedIconSource.Foreground>
                        <SolidColorBrush Color="{Binding Accent}"/>
                    </tb:GeneratedIconSource.Foreground>
                </tb:GeneratedIconSource>
            </tb:TaskbarIcon.IconSource>
            <!-- Disposal of icons -->
            <i:Interaction.Triggers>
                <i:DataTrigger Binding="{Binding}"
                               Value="null"
                               >
                    <i:CallMethodAction TargetObject="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=tb:TaskbarIcon}}"
                                        MethodName="Dispose"/>
                </i:DataTrigger>
            </i:Interaction.Triggers>

            <tb:TaskbarIcon.TrayPopup>
                <views:DeviceInfoView DataContext="{Binding}"/>
            </tb:TaskbarIcon.TrayPopup>

        </tb:TaskbarIcon>
    </DataTemplate>
</ResourceDictionary>