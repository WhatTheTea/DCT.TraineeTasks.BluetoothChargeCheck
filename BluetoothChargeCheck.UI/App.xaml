<Application x:Class="DCT.TraineeTasks.BluetoothChargeCheck.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />

                <ResourceDictionary>
                    <FontFamily x:Key="SegoeFluentIcons">pack://application:,,,/BluetoothChargeCheck.UI;component/Fonts/FluentSystemIcons-Regular.ttf</FontFamily>
                </ResourceDictionary>

                <ResourceDictionary Source="/Resources/TrayIconResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
